<!DOCTYPE html>
<html lang="pt-Br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

        body {
            font-family: "Inter", sans-serif;
            line-height: 1.6;
        }
        
        p {
            margin-top: 10px;
            font-size: 14px;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        h3 {
            font-weight: 800;
            margin-top: 10px;
            letter-spacing: 1px;
            font-size: 16px;
        }

        .no-break {
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <h1> <%= nomeAluno %> </h1>
    <p>Data de nascimento: <%= dataNascimento %> </p>
    <p>Endereço: <%= rua %>, <%= numero %> - <%= cidade %>, <%= uf %></p>
    <p>Complemento: <%= complemento %> </p>
    <p>Telefone: <%= telefone %> </p>
    <p>Telefone de recado: <%= telefoneRecado %> </p>
    <p>Email: <%= email %> </p>
    <br>

    <div class="no-break">
        <h3>OBJETIVOS</h3>
        <% if (objetivos.length > 0) { %>
            <% objetivos.forEach(objetivo => { %>
                <p> <%= objetivo %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>CARACTERÍSTICAS DO PERFIL</h3>
        <% if (caracteristicas.length > 0) { %>
            <% caracteristicas.forEach(caracteristica => { %>
                <p> <%= caracteristica %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>ESCOLARIDADE</h3>
        <% if (escolaridade.length > 0) { %>
            <% escolaridade.forEach(escola => { %>
                <p> <%= escola %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>EXPERIÊNCIA PROFISSIONAL</h3>
        <% if (experienciaProfissional.length > 0) { %>
            <% experienciaProfissional.forEach(experiencia => { %>
                <p> <%= experiencia %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>FORMAÇÃO COMPLEMENTAR</h3>
        <p style="margin-bottom: 5px !important;">Coletivo Online - Preparação para o Mercado de Trabalho - Instituto Coca-Cola Brasil</p>
        <p>Conclusão: <%= dataConclusao %></p>
        <% if (formacaoComplementar.length > 0) { %>
            <% formacaoComplementar.forEach(formacao => { %>
                <p> <%= formacao %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>TRABALHO VOLUNTÁRIO</h3>
        <% if (trabalhoVoluntario.length > 0) { %>
            <% trabalhoVoluntario.forEach(trabalho => { %>
                <p> <%= trabalho %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>

    <div class="no-break">
        <h3>IDIOMAS</h3>
        <% if (idiomas.length > 0) { %>
            <% idiomas.forEach(idioma => { %>
                <p> <%= idioma %> </p>
            <% }) %>
        <% } else { %>
            <p>Sem informações</p>
        <% } %>
    </div>
    <br>
</body>
</html>
